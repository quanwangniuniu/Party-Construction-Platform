<Window x:Class="Niuniumama.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="党建馆介绍" Height="450" Width="800">
    <Grid>
        <TextBlock Name="IntroductionTextBlock" 
                   Text="欢迎来到党建馆，这是一个介绍党建知识和成就的地方。" 
                   TextWrapping="Wrap" 
                   FontSize="16" 
                   Margin="10"/>
        <Button Name="ShowIntroductionButton" 
                Content="点击了解更多" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10" 
                Click="ShowIntroductionButton_Click"/>
    </Grid>
</Window>